<?xml version="1.0" encoding="utf-8"?>
  <com.qmuiteam.qmui.layout.QMUILinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f5f5f5"
    android:layout_gravity="center_horizontal"
    >

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:id="@+id/qmuiLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    app:layout_constraintTop_toTopOf ="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">

    <com.qmuiteam.qmui.widget.QMUIRadiusImageView
        android:id="@+id/ivTrackInnerGoodsImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:foregroundGravity="center_horizontal"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvTrackInnerPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        app:qmui_border_color="#ffffffff"/>
    <TextView
        android:id="@+id/tvTrackInnerPrice"
        android:layout_width="wrap_content"
        android:layout_height="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="15dp"
        android:text="ï¿¥888.00"
        android:textSize="10sp"
        android:textColor="@color/common_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivTrackInnerGoodsImage"
        app:layout_constraintTop_toBottomOf="@+id/ivTrackInnerGoodsImage"
        tools:ignore="MissingConstraints" />

     <CheckBox
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:layout_marginRight="5dp"
        android:background="@drawable/car_checkbox"
        android:button="@null"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivTrackInnerGoodsImage"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/tvTrackInnerPrice"
        app:layout_constraintTop_toTopOf="@+id/tvTrackInnerPrice"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </com.qmuiteam.qmui.layout.QMUILinearLayout>
</com.qmuiteam.qmui.layout.QMUILinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/car_border_order_listitem">


        <ImageView
            android:id="@+id/iv_order_logo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/car_r" />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/iv_order_logo"
            android:text="炸天帮萍乡分帮"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_order_jiantou"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@id/tv_order_name"
            android:src="@drawable/car_back_right" />

        <TextView
            android:id="@+id/tv_order_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="32dp"
            android:text="交易成功"
            android:textColor="@color/common_red"
            android:textSize="12sp" />
        <ImageView
            android:id="@+id/iv_order_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/car_bg2"
            android:layout_below="@id/iv_order_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:id="@+id/tv_order_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="一筒包邮 耐打羽毛球正品黄金一号12只装鹅毛比赛球王飞行稳定训练"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:layout_toRightOf="@id/iv_order_image"
            android:layout_below="@id/iv_order_logo"
            android:layout_marginTop="15dp"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/tv_order_smal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="【12只装 黑羽球】金黄级 经济热销 业余娱乐推荐"
            android:layout_below="@id/tv_order_goodsname"
            android:layout_toRightOf="@id/iv_order_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:textColor="#ccc"
            android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_order_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="七天无理由退货"
                android:layout_below="@id/tv_order_smal"
                android:layout_toRightOf="@id/iv_order_image"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textSize="10sp"
                android:textColor="@color/common_red"
                android:background="@drawable/car_border_order_return"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

        <LinearLayout
            android:id="@+id/ll_order1"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/iv_order_image"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/tv_order_issure"
                android:layout_width="55dp"

                android:layout_height="wrap_content"
                android:text="保险价"
                android:ellipsize="end"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_order_issure_desc"
                android:layout_width="120dp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="商品降价赔付差额"
                android:textColor="#ccc"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/tv_order_detial"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="查看详情"
                android:textColor="@color/common_red"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/ll_order1"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/tv_order_carriage"
                android:layout_width="55dp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="运费险"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_order_carriage_desc"
                android:layout_width="120dp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="退换货可自动理赔"
                android:textColor="#ccc"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/tv_order_carriage_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="￥0.65 x 1"
                android:textColor="@color/common_red"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_below="@id/ll_order2"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/tv_order_insure_server"
                android:layout_width="55dp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="保险服务"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_order_insure_server_desc"
                android:layout_width="120dp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="专享定制化购物保障"
                android:textColor="#ccc"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/tv_order_insure_server_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="￥233.65 x 1"
                android:textColor="@color/common_red"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_goodsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_order3"
            android:layout_marginTop="13dp"
            android:text="共1件商品 合计：￥25.00"
            android:layout_marginLeft="15dp"
            android:textColor="@color/common_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_goodsprice"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/car_border_btn"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除订单"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_order_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_goodsprice"
            android:layout_alignBottom="@+id/tv_order_delete"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/tv_order_delete"
            android:layout_toRightOf="@id/tv_order_delete"
            android:background="@drawable/car_border_btn"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="追加评价"
            android:textColor="@color/black" />
    </RelativeLayout>



</LinearLayout>
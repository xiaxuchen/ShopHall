        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/ivOrderDetailAddressLogo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/car_dizhi"
        app:layout_constraintBottom_toTopOf="@+id/shopcar_guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/viewSuccess"
        app:layout_constraintTop_toTopOf="@+id/shopcar_guideline3"
        app:layout_constraintVertical_bias="0.74"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvOrderDetialUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="炸天帮9527"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/shopcar_guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shopcar_guideline3"
        app:layout_constraintVertical_bias="0.62"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvOrderDeatilAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/tvOrderDetialPay"
        app:layout_constraintTop_toTopOf="@+id/tvOrderDetialPay"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvOrderDetialPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/car_border_btn"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="结算订单"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderDetialDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvOrderDetialDelete"
        app:layout_constraintTop_toTopOf="@+id/tvOrderDetialDelete"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/viewBot"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp"
        android:background="#ccc"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/shopcar_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="206dp" />

    <ScrollView
        android:id="@+id/svOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/viewBot"
        app:layout_constraintTop_toBottomOf="@id/shopcar_guideline2"
        app:layout_constraintVertical_weight="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/viewOrderDetailItem"
            app:layout_constraintTop_toBottomOf="@+id/viewOrderDetailItem">

            <View
                android:id="@+id/viewOrderDetailItem"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/view_order_detail_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shopcar_view2" />

            <ImageView
                android:id="@+id/shopcar_imageview2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/car_back_right"
                app:layout_constraintBottom_toBottomOf="@+id/tvOrderDetailStoreName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.03"
                app:layout_constraintStart_toEndOf="@+id/tvOrderDetailStoreName"
                app:layout_constraintTop_toTopOf="@+id/shopcar_guideline8"
                app:layout_constraintVertical_bias="0.64" />

            <TextView
                android:id="@+id/tvOrderDetailStoreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="312dp"
                android:text="来福运动专营店"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ivOrderDetailItemImage"
                app:layout_constraintTop_toTopOf="@+id/shopcar_guideline8" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOrderDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                app:layout_constraintBottom_toTopOf="@+id/shopcar_textview2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvOrderDetailStoreName"
                app:layout_constraintVertical_bias="0.52" />

            <TextView
                android:id="@+id/shopcar_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="订单总价："
                android:textColor="@color/common_red"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/viewOrderDetailItem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/shopcar_textview2" />

            <TextView
                android:id="@+id/tvOrderDetailTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="32dp"
                android:text="￥25"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview2"
                app:layout_constraintStart_toEndOf="@+id/shopcar_textview2"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/shopcar_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:text="实付款："
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/shopcar_textview3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.04"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvOrderDetail" />

            <TextView
                android:id="@+id/tvOrderDetailTruePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥25"
                android:textSize="12sp"
                android:textColor="@color/common_red"
                android:textColorHint="@color/common_red"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview3"
                app:layout_constraintStart_toStartOf="@+id/tvOrderDetailTotalPrice"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview3"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/shopcar_view3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#F3EFEF"
                app:layout_constraintBottom_toTopOf="@id/view_order_detail_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewOrderDetailItem" />

            <View
                android:id="@+id/view_order_detail_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewOrderDetailItem" />

            <TextView
                android:id="@+id/shopcar_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单信息"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view_order_detail_detail"
                app:layout_constraintHorizontal_bias="0.087"
                app:layout_constraintStart_toStartOf="@+id/view_order_detail_detail"
                app:layout_constraintTop_toBottomOf="@+id/shopcar_view3"
                app:layout_constraintVertical_bias="0.081" />


            <TextView
                android:id="@+id/shopcar_textview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="订单编号："
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.088"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view_order_detail_detail"
                app:layout_constraintVertical_bias="0.022" />

            <TextView
                android:id="@+id/shopcar_textview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="320dp"
                android:text="创建时间："
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/shopcar_textview5"
                app:layout_constraintTop_toBottomOf="@+id/shopcar_textview7" />

            <TextView
                android:id="@+id/shopcar_textview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="344dp"
                android:text="付款时间："
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/shopcar_textview6"
                app:layout_constraintTop_toBottomOf="@+id/shopcar_textview9" />

            <TextView
                android:id="@+id/shopcar_textview8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="344dp"
                android:text="发货时间："
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/shopcar_textview6"
                app:layout_constraintTop_toBottomOf="@+id/shopcar_textview5" />

            <TextView
                android:id="@+id/shopcar_textview9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="320dp"
                android:text="成交时间："
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/shopcar_textview8"
                app:layout_constraintTop_toBottomOf="@+id/shopcar_textview8" />

            <TextView
                android:id="@+id/tvOrderDetailOrderCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="654515584641215445465"
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.153"
                app:layout_constraintStart_toEndOf="@+id/shopcar_textview5"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview5"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tvOrderDetailOrderCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-26 18:21:29"
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview6"
                app:layout_constraintStart_toStartOf="@+id/tvOrderDetailOrderCode"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview6" />

            <TextView
                android:id="@+id/tvOrderDetailOrderPayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-26 18:21:38"
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview7"
                app:layout_constraintStart_toStartOf="@+id/tvOrderDetailOrderCreateTime"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview7" />

            <TextView
                android:id="@+id/tvOrderDetailOrderCloseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-27 11:48:57"
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview9"
                app:layout_constraintStart_toStartOf="@+id/tvOrderDetailOrderSendTime"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/shopcar_guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="28dp" />

            <TextView
                android:id="@+id/tvOrderDetailOrderSendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-07-12 12:45:33"
                android:textColor="#ccc"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/shopcar_textview8"
                app:layout_constraintStart_toStartOf="@+id/tvOrderDetailOrderPayTime"
                app:layout_constraintTop_toTopOf="@+id/shopcar_textview8"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/shopcar_view2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#F3EFEF"
                app:layout_constraintBottom_toTopOf="@+id/shopcar_guideline8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/shopcar_view5"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F3EFEF"
        app:layout_constraintBottom_toBottomOf="@+id/tvOrderDeatilAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shopcar_guideline3"
        app:layout_constraintVertical_bias="0.426"
        tools:ignore="MissingConstraints" />


        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/shopcar_guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvOrderDetialUsername"
        app:layout_constraintTop_toTopOf="@+id/shopcar_guideline3"
        app:layout_constraintVertical_bias="0.859"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tvOrderDetialDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

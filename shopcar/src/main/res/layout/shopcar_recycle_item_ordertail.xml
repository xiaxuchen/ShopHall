<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shopcar_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/ivOrderDetailItemImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:qmui_corner_radius="8dp"
            tools:ignore="MissingConstraints" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="5dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivOrderDetailItemImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivOrderDetailItemImage"
            app:layout_constraintTop_toTopOf="@+id/ivOrderDetailItemImage">
            <TextView
                android:id="@+id/ivOrderDetailItemTile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="一筒包邮 耐打羽毛球正品黄金1号12只装鹅毛比赛球王飞行稳定训练"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                tools:ignore="MissingConstraints"
                />

            <TextView
                android:id="@+id/ivOrderDetailItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="【12只装 黑羽球】金黄级 经济热销 业余娱乐推荐"
                android:textColor="#ccc"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                tools:ignore="MissingConstraints"
                android:layout_below="@+id/ivOrderDetailItemTile"
                />

            <TextView
                android:id="@+id/tvOrderDetailGoodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥55.66"
                android:textColor="@color/common_red"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/ivOrderDetailItemDesc"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
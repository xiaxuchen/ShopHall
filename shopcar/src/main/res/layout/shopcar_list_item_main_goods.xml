<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    tools:ignore="ResourceName">

        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/car_border_samll"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            />
    <TextView
        android:id="@+id/tv_goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="炸天帮藤原拓海同款真狗皮大袄子一件，加绒加厚！！过冬必备！！"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_goods_image"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#2C2828"
        />

    <TextView
        android:id="@+id/tv_goods_smal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_desc"
        android:layout_alignStart="@+id/tv_goods_desc"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_goods_image"
        android:text="装逼之人用品"
        android:textColor="#7E7777"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_goods_smal"
        android:layout_alignStart="@+id/tv_goods_desc"
        android:layout_alignBottom="@+id/iv_goods_image"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="15dp"
        android:layout_toRightOf="@+id/iv_goods_image"
        android:text="￥999.0"
        android:textColor="#f00" />
            <TextView
                android:id="@+id/tv_goods_pifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12件起批"
                android:layout_alignBottom="@+id/iv_goods_image"
                android:layout_alignRight="@+id/tv_goods_desc"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="10dp"
                android:textColor="#8B7E7E"
                />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#C7C0C0"
            android:layout_marginTop="140dp"
           />


</RelativeLayout>
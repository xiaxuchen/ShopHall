<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    tools:context=".ui.activity.FavoriteActivity">

    <com.cxyz.widget.HeaderBar
        android:id="@+id/hb_favorite_headerbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:background="@color/common_colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/shopcar_guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:moreText="管理"
        app:backText="全部宝贝"
        tools:ignore="MissingConstraints"></com.cxyz.widget.HeaderBar>

    <ImageView
        android:id="@+id/iv_favorite_search"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/car_search_favorite"
        app:layout_constraintBottom_toTopOf="@+id/shopcar_guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.14999998"
        tools:ignore="MissingConstraints" />


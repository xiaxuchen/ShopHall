<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:backgroundTint="#f2f2f2">

    <com.qmuiteam.qmui.layout.QMUIRelativeLayout
        android:id="@+id/qmuiRlStoreDetail"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="14sp"
        android:layout_marginEnd="14sp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/ivStoreDetailStoreImageBig"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/car_bg3"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/tvStoreOwnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="经营者：晴峰笔荷·系雪衣"
            android:textColor="#393939"
            android:layout_alignTop="@id/ivStoreDetailStoreImageBig"
            android:layout_toEndOf="@id/ivStoreDetailStoreImageBig"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tvStoreOwnerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系方式：155xxxx7998"
            android:textSize="10sp"
            android:textColor="#393939"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvStoreOwnerName"
            android:layout_toEndOf="@id/ivStoreDetailStoreImageBig"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tvStoreAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：苦境 十三区"
            android:textSize="10sp"
            android:textColor="#393939"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvStoreOwnerPhone"
            android:layout_toEndOf="@id/ivStoreDetailStoreImageBig"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tvStoreQualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺资质：3星"
            android:textSize="10sp"
            android:textColor="#393939"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvStoreAddress"
            android:layout_toEndOf="@id/ivStoreDetailStoreImageBig"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tvStoreMainProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主营商品：狗屁大衣"
            android:textSize="10sp"
            android:textColor="#393939"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tvStoreQualification"
            android:layout_toEndOf="@id/ivStoreDetailStoreImageBig"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </com.qmuiteam.qmui.layout.QMUIRelativeLayout>
    <TextView
        android:id="@+id/tvStoreNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="店铺公告：纵使清明无雨色，入云深处亦沾衣。"
        android:textSize="12sp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/car_border_store_notice"
        android:layout_marginTop="15dp"
        android:textColor="@color/common_orange"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStoreDetailGoods"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="14sp"
        android:layout_marginEnd="14sp"
        />
</LinearLayout>
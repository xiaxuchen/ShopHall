<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_gray_background_color"
    >

    <View
        android:id="@+id/vHeaderBack"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/common_orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

                 <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tvBackIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-arrow-left}"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin_small"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/vHeaderBack"
        app:layout_constraintBottom_toBottomOf="@id/vHeaderBack"
        android:textColor="@color/common_colorAccent"
        />

    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺"
        app:layout_constraintTop_toTopOf="@id/vHeaderBack"
        app:layout_constraintBottom_toBottomOf="@id/vHeaderBack"
        app:layout_constraintLeft_toRightOf="@id/tvBackIcon"
        android:layout_margin="@dimen/common_margin_small"
        android:textColor="@color/common_white"
        android:textSize="18sp"
        />

    <View
        android:id="@+id/vSearchBack"
        android:layout_width="0dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@id/tvBack"
        app:layout_constraintBottom_toBottomOf="@id/tvBack"
        app:layout_constraintLeft_toRightOf="@id/tvBack"
        android:layout_margin="@dimen/common_margin"
        app:layout_constraintRight_toLeftOf="@id/tvCollect"
        android:background="@drawable/main_search_round_background"
        />

    <com.joanzapata.iconify.widget.IconTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:text=" {fa-search} 搜索"
        android:textColor="@color/common_gray"
        app:layout_constraintTop_toTopOf="@id/vSearchBack"
        app:layout_constraintBottom_toBottomOf="@id/vSearchBack"
        app:layout_constraintLeft_toLeftOf="@id/vSearchBack"
        />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tvCollect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="{fa-heart-o} 收藏"
        android:layout_marginRight="@dimen/common_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vHeaderBack"
        android:textSize="16sp"
        android:textColor="@color/common_white"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clStoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vHeaderBack"
        android:paddingRight="@dimen/common_padding_small"
        android:paddingLeft="@dimen/common_padding_small"
        android:paddingTop="@dimen/common_padding_small"
        android:paddingBottom="@dimen/common_padding"
        >

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/ivStore"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:qmui_corner_radius="1dp"
            app:qmui_border_width="0dp"
            app:layout_constraintTop_toTopOf="@id/tvStoreNameLabel"
            app:layout_constraintBottom_toBottomOf="@id/tvStoreAddressLabel"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:scaleType="centerCrop"
            android:src="@mipmap/store"/>



        <TextView
            android:id="@+id/tvStoreNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_gray_text_color"
            android:text="店铺名称"
            android:labelFor="@id/tvStoreName"
            android:layout_margin="@dimen/common_margin"
            app:layout_constraintLeft_toRightOf="@id/ivStore"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvStoreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奕晨铺子"
            android:textColor="@color/main_gray_text_color"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintLeft_toRightOf="@id/tvStoreNameLabel"
            app:layout_constraintBaseline_toBaselineOf="@id/tvStoreNameLabel"
            />

        <TextView
            android:id="@+id/tvStorePhoneLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginBottom="@dimen/common_margin_middle"
            android:labelFor="@id/tvStorePhone"
            android:textColor="@color/main_gray_text_color"
            android:text="电话"
            android:letterSpacing="2"
            app:layout_constraintStart_toStartOf="@id/tvStoreNameLabel"
            app:layout_constraintEnd_toEndOf="@+id/tvStoreNameLabel"
            app:layout_constraintTop_toBottomOf="@id/tvStoreNameLabel" />

        <TextView
            android:id="@+id/tvStorePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678912"
            android:textColor="@color/main_gray_text_color"
            app:layout_constraintLeft_toLeftOf="@id/tvStoreName"
            app:layout_constraintBaseline_toBaselineOf="@id/tvStorePhoneLabel"
            />

        <TextView
            android:id="@+id/tvStoreOwnerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginBottom="@dimen/common_margin_middle"
            android:labelFor="@id/tvStoreOwner"
            android:textColor="@color/main_gray_text_color"
            android:text="经营者"
            android:letterSpacing="0.66"
            app:layout_constraintStart_toStartOf="@id/tvStoreNameLabel"
            app:layout_constraintEnd_toEndOf="@+id/tvStoreNameLabel"
            app:layout_constraintTop_toBottomOf="@id/tvStorePhoneLabel" />

        <TextView
            android:id="@+id/tvStoreOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxc"
            android:textColor="@color/main_gray_text_color"
            app:layout_constraintLeft_toLeftOf="@id/tvStoreName"
            app:layout_constraintBaseline_toBaselineOf="@id/tvStoreOwnerLabel"
            />

        <TextView
            android:id="@+id/tvStoreAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginBottom="@dimen/common_margin_middle"
            android:labelFor="@id/tvStoreAddress"
            android:text="地址"
            android:letterSpacing="2"
            android:textColor="@color/main_gray_text_color"
            app:layout_constraintStart_toStartOf="@id/tvStoreNameLabel"
            app:layout_constraintEnd_toEndOf="@+id/tvStoreNameLabel"
            app:layout_constraintTop_toBottomOf="@id/tvStoreOwnerLabel" />

        <TextView
            android:id="@+id/tvStoreAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="萍乡市安源区xx厂"
            style="@style/MainScrollTextView"
            android:textColor="@color/main_gray_text_color"
            app:layout_constraintLeft_toLeftOf="@id/tvStoreName"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/common_margin"
            app:layout_constraintBaseline_toBaselineOf="@id/tvStoreAddressLabel"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/vOtherInfoBack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/common_white"
        app:layout_constraintBottom_toBottomOf="@id/tvStoreNotice"
        app:layout_constraintTop_toBottomOf="@id/clStoreInfo"
         />

    <TextView
        android:id="@+id/tvStoreTagLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/vOtherInfoBack"
        android:layout_margin="@dimen/common_margin"
        android:text="商铺资质"
        android:textColor="@color/main_white_text_label_color"
        />

    <View
        android:id="@+id/vStoreTag"
        android:layout_width="1dp"
        android:layout_height="0px"
        app:layout_constraintTop_toTopOf="@id/tvStoreTagLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvStoreTagLabel"
        app:layout_constraintLeft_toRightOf="@id/tvStoreTagLabel"
        app:layout_constraintRight_toLeftOf="@id/tvStoreTag"
        android:background="@color/common_divider"
        android:layout_marginLeft="@dimen/common_margin_small"
        android:layout_marginRight="@dimen/common_margin_small"
        />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/tvStoreTag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tvStoreTagLabel"
        app:layout_constraintLeft_toRightOf="@id/vStoreTag"
        app:layout_constraintRight_toRightOf="parent"
        android:text="{fa-star} {fa-star} {fa-star} {fa-star}"
        android:textColor="#CD7F32"
        />

    <TextView
        android:id="@+id/tvStoreGoodsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        app:layout_constraintLeft_toLeftOf="@id/tvStoreTagLabel"
        app:layout_constraintTop_toBottomOf="@id/tvStoreTagLabel"
        android:text="主营商品"
        android:textColor="@color/main_white_text_label_color"
        />

    <TextView
        android:id="@+id/tvStoreGoods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvStoreGoodsLabel"
        android:layout_marginLeft="@dimen/common_margin"
        app:layout_constraintBaseline_toBaselineOf="@id/tvStoreGoodsLabel"
        android:text="男女丝袜,蕾丝船袜"
        android:textColor="@color/main_white_text_color"
        style="@style/MainScrollTextView"
        />

    <TextView
        android:id="@+id/tvStoreNoticeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        app:layout_constraintLeft_toLeftOf="@id/tvStoreTagLabel"
        app:layout_constraintTop_toBottomOf="@id/tvStoreGoodsLabel"
        android:text="商铺公告"
        android:labelFor="@id/tvStoreNotice"
        android:textColor="@color/main_white_text_label_color"
        />

    <TextView
        android:id="@+id/tvStoreNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tvStoreNoticeLabel"
        android:layout_marginLeft="@dimen/common_margin"
        app:layout_constraintBaseline_toBaselineOf="@id/tvStoreNoticeLabel"
        android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
        android:paddingBottom="@dimen/common_padding"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/common_margin"
        android:textColor="@color/main_white_text_color"
        android:singleLine="false"
        android:maxLines="3"
        android:minLines="1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategory"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/vOtherInfoBack"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/common_white"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:padding="@dimen/common_padding_middle"
        android:id="@+id/rvGoods"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/rvCategory"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rvCategory"
        app:layout_constraintRight_toRightOf="parent"
        />






</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SearchResultsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_colorPrimary"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:id="@+id/imSearchResultsBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/common_margin_middle"
            android:layout_marginTop="@dimen/common_margin"
            android:src="@mipmap/common_title_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_header_bar_height"
            android:background="@color/common_colorPrimary"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvMainSearch"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/mine_radius_border"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:hint="请输入搜索内容"
                android:textColorHint="#ccc"
                android:textSize="14dp"
                android:textColor="#3e4144" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toRightOf="@+id/tvMainSearch"
                android:layout_marginTop="15dp"
                android:layout_marginStart="-40dp"
                android:background="@mipmap/mine_search" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/imCamera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/mine_search_resultes_pictures"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginLeft="@dimen/common_margin_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/common_margin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlCommodityNav"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:tabTextColor="#9c9c9c"
        app:tabSelectedTextColor="#cacaca"
        app:tabMode="fixed"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:tabIndicatorColor="@color/common_colorPrimary"
        app:tabIndicatorHeight="1dp"
        tools:ignore="MissingConstraints"
        >
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpCommodity"
        app:layout_constraintTop_toBottomOf="@id/tlCommodityNav"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
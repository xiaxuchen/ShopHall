<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.SearchResultsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_colorPrimary"
        tools:ignore="MissingConstraints" >

        <ImageView
            android:id="@+id/mine_imageview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/common_margin_middle"
            android:layout_marginTop="@dimen/common_margin"
            android:src="@mipmap/common_title_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <AutoCompleteTextView
            android:id="@+id/autoTvSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/mineSearchTip"
            android:textSize="15dp"
            android:textColor="#bbbbbb"
            android:background="@drawable/mine_search_textview_bg"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="90dp"
            android:paddingLeft="@dimen/common_margin"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/mine_search_results_delect"
            android:background="@drawable/mine_search_results_delect"
           android:padding="@dimen/common_padding_small"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintLeft_toRightOf="@id/autoTvSearch"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/mine_search_resultes_pictures"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginLeft="@dimen/common_margin_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/common_margin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/SelectNavigation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/headerBar">
        <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="综合"
        android:textSize="13dp"
        android:textColor="#9c9c9c"
        android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="综合"
            android:textSize="13dp"
            android:textColor="#9c9c9c"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="综合"
            android:textSize="13dp"
            android:textColor="#9c9c9c"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="综合"
            android:textSize="13dp"
            android:textColor="#9c9c9c"
            android:gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
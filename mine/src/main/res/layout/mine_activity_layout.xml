<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f0f0"
    tools:context=".ui.fragment.MineFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mineHeader"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/common_colorPrimary"
        tools:ignore="MissingConstraints">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imMineHeaderImg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="@dimen/common_margin_middle"
            android:layout_marginTop="20dp"
            android:src="@mipmap/mine_mall_ad_img05"
            app:layout_constraintLeft_toLeftOf="@id/mineHeader"
            app:layout_constraintTop_toTopOf="@id/mineHeader" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="天王盖地"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large_size"
            app:layout_constraintLeft_toRightOf="@id/imMineHeaderImg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/personalInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/common_margin_small"
            android:background="@drawable/mine_header_border"
            android:paddingLeft="@dimen/common_padding_small"
            android:paddingTop="3dp"
            android:paddingRight="@dimen/common_padding_small"
            android:paddingBottom="3dp"
            android:text="@string/mineHeaderZiliao"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_size"
            app:layout_constraintLeft_toRightOf="@id/imMineHeaderImg"
            app:layout_constraintTop_toBottomOf="@id/tvUserName" />

        <ImageView
            android:id="@+id/setUp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/common_padding_middle"
            android:src="@mipmap/mine_header_setup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mineLoginHeader"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/common_colorPrimary"
        tools:ignore="MissingConstraints">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/qmuiIvAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/mine_login_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="登录/注册"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qmuiIvAvatar" />

        <ImageView
            android:id="@+id/setUpLogin"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/common_padding_middle"
            android:src="@mipmap/mine_header_setup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/mineOrders"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/mine_page_border"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/mine_guideline"
        tools:ignore="MissingConstraints,Orientation">

        <TextView
            android:id="@+id/mineMyOrder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="center_vertical"
            android:text="@string/mineMyorder"
            android:textSize="@dimen/text_large_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_divider_height"
            android:background="@color/common_divider" />

        <LinearLayout
            android:id="@+id/minePurchased"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/mineMyOrder"
            tools:ignore="MissingConstraints,Orientation">
            <!-- a待付款 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/prePayment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/common_padding">

                <ImageView
                    android:id="@+id/imPrePayment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/mine_order_a"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/mineMyorderA"
                    android:textSize="@dimen/text_middle_size"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imPrePayment" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- b待发货 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/delivered"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/common_padding">

                <ImageView
                    android:id="@+id/imDelivered"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/mine_order_b"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/mineMyorderB"
                    android:textSize="@dimen/text_middle_size"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imDelivered" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- c待收货 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/received"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/common_padding">

                <ImageView
                    android:id="@+id/imReceived"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/mine_order_c"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/mineMyorderC"
                    android:textSize="@dimen/text_middle_size"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imReceived" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- d全部订单 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mineOrder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/common_padding">

                <ImageView
                    android:id="@+id/imMineOrder"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/common_margin_middle"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/mine_order_d"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:gravity="center_horizontal"
                    android:text="@string/mineMyorderD"
                    android:textSize="@dimen/text_middle_size"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imMineOrder" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/minePurchased2"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin_middle"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/mine_page_border"
        app:layout_constraintTop_toBottomOf="@id/mineOrders"
        tools:ignore="Orientation">
        <!-- 购物车 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mineFavorite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/mineFavoriteImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:background="@drawable/mine_favorite_border"
                android:padding="5dp"
                android:src="@mipmap/mine_favorite"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_line_height"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="@string/mineFavorites"
                android:textSize="@dimen/text_middle_size"
                app:layout_constraintLeft_toLeftOf="@id/mineFavoriteImg" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin_small"
                android:background="@mipmap/mine_personal_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_divider_height"
            android:background="@color/common_divider"
            app:layout_constraintTop_toBottomOf="@id/mineFavorite"
            tools:ignore="MissingConstraints" />
        <!-- 账户资金 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mineAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            app:layout_constraintTop_toBottomOf="@id/mineFavorite"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/mineAccountImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:background="@drawable/mine_account_border"
                android:padding="5dp"
                android:src="@mipmap/mine_account_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_line_height"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="@string/mineAccount"
                android:textSize="@dimen/text_middle_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/mineAccountImg" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin_small"
                android:background="@mipmap/mine_personal_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_divider_height"
            android:background="@color/common_divider"
            app:layout_constraintTop_toBottomOf="@id/mineAccount"
            tools:ignore="MissingConstraints" />
        <!-- 浏览历史 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mineHistory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_height"
            app:layout_constraintTop_toBottomOf="@id/mineAccount"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/mineHistoryImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin_middle"
                android:background="@drawable/mine_favorite_border"
                android:padding="5dp"
                android:src="@mipmap/mine_history"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_line_height"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:text="@string/mineHistory"
                android:textSize="@dimen/text_middle_size"
                app:layout_constraintLeft_toLeftOf="@id/mineHistoryImg" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin_small"
                android:background="@mipmap/mine_personal_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_divider_height"
            android:background="@color/common_divider"
            app:layout_constraintTop_toBottomOf="@id/mineHistory"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mine_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="115dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
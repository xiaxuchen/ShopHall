<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".li.ui.MineActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mine_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:ignore="MissingConstraints"
        android:background="@color/common_orange">
        <ImageView
            android:id="@+id/mine_header_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="@id/mine_header"
            app:layout_constraintLeft_toLeftOf="@id/mine_header"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/common_margin_middle"
            android:background="@drawable/mine_header_border"
            android:src="@drawable/mine_mall_ad_img05"
            />
        <TextView
            android:id="@+id/mine_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/mine_header_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:text="天王盖地"
            android:textSize="@dimen/text_large_size"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mine_header_name"
            app:layout_constraintLeft_toRightOf="@id/mine_header_img"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/common_margin_small"
            android:text="@string/mine_header_ziliao"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small_size"
            android:background="@drawable/mine_header_border"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/common_padding_middle"
            android:src="@drawable/mine_header_setup"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/mine_myonder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/mine_header"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/common_margin"
        android:text="@string/mine_myorder"
        android:textSize="@dimen/text_large_size"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/mine_purchased"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/mine_myonder"
        tools:ignore="MissingConstraints,Orientation">
        <!-- a待付款 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/common_padding">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin_middle"
                android:src="@drawable/mine_order_a"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="@string/mine_myorder_a"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>
        <!-- b待发货 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/common_padding">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin_middle"
                android:src="@drawable/mine_order_b"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="@string/mine_myorder_b"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>
        <!-- c待收货 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/common_padding">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin_middle"
                android:src="@drawable/mine_order_c"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="@string/mine_myorder_c"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>
        <!-- d全部订单 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/common_padding">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/common_margin_middle"
                android:src="@drawable/mine_order_d"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="@string/mine_myorder_d"
                android:textSize="@dimen/text_middle_size"
                />
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/mine_divider"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/common_divider"
        app:layout_constraintTop_toBottomOf="@id/mine_purchased"
        tools:ignore="MissingConstraints" />
    <!-- 购物车 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mine_favorite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:layout_constraintTop_toBottomOf="@id/mine_divider"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/mine_favorite_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:background="@drawable/mine_favorite_border"
            android:src="@drawable/mine_favorite"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_line_height"
            app:layout_constraintLeft_toLeftOf="@id/mine_favorite_img"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:text="@string/mine_favorites"
            android:textSize="@dimen/text_middle_size"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin_small"
            android:background="@drawable/mine_personal_back"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toTopOf="@id/mine_favorite"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        tools:ignore="MissingConstraints" />
    <!-- 账户资金 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mine_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:layout_constraintTop_toBottomOf="@id/mine_favorite"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/mine_account_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:background="@drawable/mine_account_border"
            android:src="@drawable/mine_account_img"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_line_height"
            app:layout_constraintLeft_toLeftOf="@id/mine_account_img"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:text="@string/mine_account"
            android:textSize="@dimen/text_middle_size"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin_small"
            android:background="@drawable/mine_personal_back"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toTopOf="@id/mine_account"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        tools:ignore="MissingConstraints" />
    <!-- 浏览历史 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mine_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:layout_constraintTop_toBottomOf="@id/mine_account"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/mine_history_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:background="@drawable/mine_favorite_border"
            android:src="@drawable/mine_history"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_line_height"
            app:layout_constraintLeft_toLeftOf="@id/mine_history_img"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:text="@string/mine_history"
            android:textSize="@dimen/text_middle_size"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin_small"
            android:background="@drawable/mine_personal_back"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toTopOf="@id/mine_history"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
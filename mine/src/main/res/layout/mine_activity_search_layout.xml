<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.SearchActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_colorPrimary"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:src="@mipmap/common_title_back"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginLeft="@dimen/common_margin_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <AutoCompleteTextView
            android:id="@+id/autoTvSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/mineSearchTip"
            android:textSize="15dp"
            android:textColor="#bbbbbb"
            android:background="@drawable/mine_search_text_bg"
            android:layout_marginTop="8dp"
            android:paddingLeft="@dimen/common_margin"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="75dp"/>
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="@string/mineSearchBtn"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@drawable/mine_search_button_bg"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginBottom="@dimen/common_margin_middle"
            android:layout_marginRight="@dimen/common_margin"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--<ListView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historySearchTip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mineSearchHistory"
            android:textSize="16dp"
            android:textColor="#353535"
            android:gravity="bottom"
            android:layout_marginRight="50dp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/mine_search_clear"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historySearchContent"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/historySearchTip"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        tools:ignore="MissingConstraints">

        <com.cxyz.mine.ui.view.FlowLayout
            android:id="@+id/flowHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginRight="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mineSearchMore"
            android:textSize="13dp"
            android:textColor="#5f5f5f"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/searchFind"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/mineSearchFind"
            android:textSize="16dp"
            android:textColor="#353535"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@id/historySearchContent"
            />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/searchFind"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        tools:ignore="MissingConstraints">
        <com.cxyz.mine.ui.view.FlowLayout
            android:id="@+id/flowSearchFind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginRight="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mineSearchMore"
            android:textSize="13dp"
            android:textColor="#5f5f5f"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
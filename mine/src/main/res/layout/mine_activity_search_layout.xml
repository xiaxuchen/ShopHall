<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.SearchActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_colorPrimary"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:id="@+id/imSearchBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/common_title_back"
            android:layout_marginLeft="@dimen/common_margin_middle"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <!--顶部搜索框-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_header_bar_height"
            android:background="@color/common_colorPrimary"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etMainSearch"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/mine_radius_border"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:hint="请输入搜索内容"
                android:textColorHint="#ccc"
                android:textColor="#3e4144" />

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_toRightOf="@+id/tvMainSearch"
                android:layout_marginTop="15dp"
                android:layout_marginStart="-40dp"
                android:background="@mipmap/mine_search" />
        </RelativeLayout>
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:text="@string/mineSearchBtn"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:background="@drawable/mine_search_button_bg"
            android:layout_marginTop="@dimen/common_margin_middle"
            android:layout_marginBottom="@dimen/common_margin_middle"
            android:layout_marginRight="@dimen/common_margin"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--<ListView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historySearchTip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/mineSearchHistory"
            android:textSize="16dp"
            android:textColor="#353535"
            android:gravity="bottom"
            android:layout_marginRight="50dp"/>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/mine_search_clear"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historySearchContent"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/historySearchTip"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        tools:ignore="MissingConstraints">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginRight="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mineSearchMore"
            android:textSize="13dp"
            android:textColor="#5f5f5f"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/searchFind"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/mineSearchFind"
            android:textSize="16dp"
            android:textColor="#353535"
            android:gravity="bottom"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@id/historySearchContent"
            />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/searchFind"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_marginLeft="@dimen/common_margin"
        tools:ignore="MissingConstraints">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSearchFind"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_marginRight="70dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mineSearchMore"
            android:textSize="13dp"
            android:textColor="#5f5f5f"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
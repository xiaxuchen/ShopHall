<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    tools:context=".activity.PersonalInfo">

    <RelativeLayout
        android:id="@+id/PersonalInfoHeaderBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fd4369"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_back_lift"
            android:layout_marginStart="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/PersonalInfoHeaderBar"
        tools:ignore="MissingConstraints">
        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/imProfilePicture"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf ="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#FFEB3B"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/accountNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/divider01"
        tools:ignore="MissingConstraints" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="账号"
            android:textSize="15dp"
            android:textColor="#3e4144"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvPsnAccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            android:text="188828274"
            android:textColor="#858585"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider02"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        app:layout_constraintTop_toBottomOf="@id/accountNumber"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/divider02"
        tools:ignore="MissingConstraints" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="昵称"
            android:textSize="15dp"
            android:textColor="#3e4144"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvPsnName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            android:text="天王盖地虎"
            android:textColor="#858585"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider03"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divider03"
        tools:ignore="MissingConstraints" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机"
            android:textSize="15dp"
            android:textColor="#3e4144"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/tvPsnPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="18879793838"
            android:textSize="15dp"
            android:textColor="#858585"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider04"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/phone"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vip"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divider04"
        tools:ignore="MissingConstraints" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="VIP"
            android:textSize="15dp"
            android:textColor="#3e4144"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/tvVIP"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="20dp"
            android:textColor="#E70C0C"
            android:layout_marginRight="20dp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider05"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/vip"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divider05"
        tools:ignore="MissingConstraints" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="更多"
            android:textSize="15dp"
            android:textColor="#3e4144"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:background="@mipmap/mine_back"
            android:gravity="center"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider06"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/more"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/divider06"
        tools:ignore="MissingConstraints" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="退出登录"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="#fd4369"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
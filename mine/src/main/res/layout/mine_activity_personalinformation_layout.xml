<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    tools:context=".ui.activity.PersonalInformation">

    <com.cxyz.widget.HeaderBar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_bar_height"
        app:backText="个人信息"
        app:background="@color/common_colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf ="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/mine_personalinaformation_avatar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/accountNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:layout_constraintTop_toBottomOf="@id/divider01"
        android:background="@drawable/mine_personalinaformation_accountnumber"
        tools:ignore="MissingConstraints" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="@string/minePersonalAccount"
            android:textColor="#3e4144"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="188828274"
            android:textColor="#858585"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider02"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/common_bg"
        app:layout_constraintTop_toBottomOf="@id/accountNumber"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:layout_constraintTop_toBottomOf="@id/divider02"
        android:background="@drawable/mine_personalinaformation_nickname"
        tools:ignore="MissingConstraints" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="@string/minePersonalName"
            android:textColor="#3e4144"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="天王盖地虎"
            android:textColor="#858585"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider03"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/nickname"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/phone"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_line_height"
        android:background="@color/white"
    app:layout_constraintTop_toBottomOf="@id/divider03"
    tools:ignore="MissingConstraints" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/minePersonalPhone"
        android:textColor="#3e4144"
        android:gravity="center"
        android:layout_marginLeft="@dimen/common_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="18879793838"
        android:textColor="#858585"
        android:layout_marginRight="@dimen/common_margin"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider04"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/phone"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divider04"
        tools:ignore="MissingConstraints" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin"
            android:gravity="center"
            android:text="@string/minePersonalVip"
            android:textColor="#3e4144"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="vip:5"
            android:textColor="@color/common_colorPrimary"
            android:layout_marginRight="@dimen/common_margin"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider05"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/vip"
        tools:ignore="MissingConstraints" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/divider05"
        tools:ignore="MissingConstraints" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/minePersonalMore"
            android:textColor="#3e4144"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/mine_personal_back"
            android:gravity="center"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider06"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        app:layout_constraintTop_toBottomOf="@id/more"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/divider06"
        android:background="@drawable/mine_personalinaformation_accountnumber"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
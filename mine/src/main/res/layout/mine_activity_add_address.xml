<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.AddAddressActivity">

    <com.cxyz.widget.HeaderBar
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:background="@color/common_colorPrimary"
        app:title="添加收货地址"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_middle"
            android:background="@null"
            android:hint="@string/mine_add_address_name"
            android:textSize="@dimen/text_middle_size"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/mine_add_address_name"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:inputType="textPhonetic"
        android:hint="@string/mine_add_address_phone"
        android:textSize="@dimen/text_middle_size"
        android:background="@null"
        android:layout_marginLeft="@dimen/common_margin_middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider01"/>
    <View
        android:id="@+id/divider02"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toBottomOf="@id/phone"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:inputType="text"
        android:hint="@string/mine_add_address_area"
        android:textSize="@dimen/text_middle_size"
        android:background="@null"
        android:layout_marginLeft="@dimen/common_margin_middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider02"/>
    <View
        android:id="@+id/divider03"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toBottomOf="@id/area"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/addressTip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="详细地址：如街道、门牌号、小区、楼栋号、单元室等"
        android:layout_marginLeft="@dimen/common_margin_middle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider03"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/addressTip"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/divider04"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        android:background="@color/common_divider"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setUp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider04"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="设为默认地址"
            android:layout_marginLeft="@dimen/common_margin_middle"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <Switch
            android:id="@+id/swh_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/divider05"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_divider_height"
        android:background="@color/common_divider"
        app:layout_constraintTop_toBottomOf="@id/setUp"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:text="确认添加"
        android:textColor="@color/white"
        android:background="@color/common_colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
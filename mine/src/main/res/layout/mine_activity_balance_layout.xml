<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BalanceActivity">

    <com.cxyz.widget.HeaderBar
        android:id="@+id/balanceBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tvBalance"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:text="888.0元"
        android:textSize="48dp"
        android:textColor="@color/common_colorPrimary"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/balanceBar"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/btRecharge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvBalance"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btnWithdraw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="充值"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@color/common_colorPrimary"
            tools:ignore="Suspicious0dp" />
        <View
            android:layout_width="@dimen/common_divider_height"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部记录"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@color/common_colorPrimary"
            tools:ignore="Suspicious0dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvRecordTip"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="最新记录"
        android:textSize="13.3dp"
        android:gravity="bottom"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/btRecharge"
        tools:ignore="MissingConstraints" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecordTip"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
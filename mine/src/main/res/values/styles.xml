<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="QMUI.Compat" tools:ignore="ResourceName">

        <!-- 重写系统 或者 QMUI 提供的 attr -->

    </style>

    <style name="CustomDialogStyle" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>

        <!-- 背景透明 -->
        <item name="android:windowBackground"></item>

        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>

        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>

        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>

        <!-- 背景模糊 -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- 允许对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- 字体颜色 -->
        <item name="android:textColor">#777777</item>
        <item name="android:editTextColor">#777777</item>
    </style>
</resources>
